<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
         <div class="container">
            <div class="row mt-3">
                <div class="col-md-6 offset-md-3">
                     <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%=event.title%></h5>
                            <hr>
                            <p class="card-text"><%=event.description%> </p>
                            <p class="card-text"><%=event.location%> </p>
                            <p> <span class="badge bg-secondary"><%=event.date.toDateString()%></span> </p>
                            <% if((user) && (user.id == event.user_id)) { %>
                           <a href="<%= '/events/edit/'+ event.id %>" class="btn btn-primary">Edit</a>
                           <button class="btn btn-danger" onclick="deletEvent()" id="deleteBtn" data-id="<%= event._id %>">Delete</button>
                           <%}%>
                        </div>
                    </div>
                    
                </div>
            </div>
         </div>
<%- include('../partials/footer') -%>

 